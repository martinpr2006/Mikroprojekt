generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ratings {
  id         Int      @id @default(autoincrement())
  subject_id Int
  rating     Decimal  @db.Decimal(2, 1)
  comment    String?  @db.Text
  subjects   subjects @relation(fields: [subject_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "ratings_ibfk_1")

  @@index([subject_id], map: "subject_id")
}

model subjects {
  id      Int       @id @default(autoincrement())
  subject String    @db.VarChar(100)
  teacher String    @db.VarChar(100)
  ratings ratings[]
}
